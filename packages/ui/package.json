{
  "private": true,
  "name": "@acme/ui",
  "version": "1.0.0",
  "description": "Acme UI components for React Native",
  "author": "Cedric van Putten <me@bycedric.com>",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch --silent",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "build": "tsup --clean"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@testing-library/react-native": "^12.9.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.18",
    "babel-preset-expo": "~12.0.6",
    "expo": "~52.0.26",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.3",
    "nativewind": "^4.1.23",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.6",
    "react-native-web": "~0.19.13",
    "react-test-renderer": "18.3.1",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "nativewind": "*",
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "@acme/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build"
    ]
  },
  "jest": {
    "preset": "jest-expo"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react",
      "react-native",
      "react-native-web",
      "nativewind",
      "nativewind/styled"
    ]
  },
  "dependencies": {
    "@rn-primitives/slot": "^1.1.0",
    "@rn-primitives/types": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react-native": "^0.475.0",
    "react-native-svg": "^15.11.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
